<h4 class="ui top attached header">
	{{.i18n.Tr "settings.runners"}}
</h4>
<div class="ui attached segment">
	<div class="ui key list">
		<div class="item">
			{{.RunnerDescription | Str2html}}
		</div>
		{{range .Runners}}
			<div class="item">
				<div class="right floated content">
						<button class="ui red tiny button delete-button" id="delete-runner" data-url="{{$.BaseLink}}/runners/delete" data-id="{{.ID}}">
							{{svg "octicon-trashcan" 16 "mr-2"}}
							{{$.i18n.Tr "settings.delete_runner"}}
						</button>
				</div>
				<i class="big icon">{{svg "runner-gitea" 32}}</i>
				<div class="content">
					<strong>{{.Type.Name}}</strong>
					<div class="activity meta">
						<i>{{$.i18n.Tr "settings.add_on"}} <span>{{.CreatedUnix.FormatShort}}</span></i>
					</div>
				</div>
				{{ $settings := .Settings }}
				{{ if $settings }}
				<h5>{{$.i18n.Tr "settings.runner_settings"}}</h5>
				<div class="markdown">
					<pre><code>{{ range $key, $value := $settings }}{{ $key }}={{ $value }}
{{ end }}</code></pre>
				</div>
				{{ end }}
			</div>
		{{end}}
	</div>
</div>
<div class="ui attached bottom segment">
	<h5 class="ui top header">
		{{.i18n.Tr "settings.add_new_runner"}}
	</h5>
	<p>{{.i18n.Tr "settings.add_new_runner_desc"}}</p>
	<form class="ui form ignore-dirty" action="{{.BaseLink}}/runners/gitlab/new" method="post">
		{{.CsrfTokenHtml}}
		<button class="ui green button">
			{{.i18n.Tr "settings.add_gitea_runner"}}
		</button>
	</form>
</div>

<div id="delete-runner" class="ui small basic delete modal">
	<div class="ui icon header">
		{{svg "octicon-trashcan"}}
		{{.i18n.Tr "settings.runner_deletion"}}
	</div>
	<div class="content">
		<p>{{.i18n.Tr "settings.runner_deletion_desc"}}</p>
	</div>
	<div class="actions">
		<div class="ui red basic inverted cancel button">
			<i class="remove icon"></i>
			{{.i18n.Tr "modal.no"}}
		</div>
		<div class="ui green basic inverted ok button">
			<i class="checkmark icon"></i>
			{{.i18n.Tr "modal.yes"}}
		</div>
	</div>
</div>
